<h2 class="font-medium text-lg text-center mb-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>

  <div class="text-sm text-red-600 text-left mt-2 mb-2">
    <%= notice if notice %>
    <%= alert if alert %>
  </div>

  <div class="mb-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="mb-2">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "current-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-2 flex justify-between place-items-center">
      <div>
        <%= f.check_box :remember_me, class: 'w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300' %>
        <%= f.label :remember_me, class: 'ml-2 text-sm font-medium text-gray-900' %>
      </div>
      <div>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-medium text-blue-500 hover:underline text-sm' %>
      </div>
    </div>
  <% end %>

  <div class="mb-2">
    <%= f.submit "Log in", class: 'w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg w-full px-5 py-2.5 text-center hover:cursor-pointer' %>
  </div>
<% end %>
<div class="text-left">
  <span class="text-sm font-medium text-gray-900 t">Don't have an account yet? </span><%= link_to "Register", new_registration_path(resource_name), class: 'font-medium text-blue-500 hover:underline text-sm' %>
</div>
